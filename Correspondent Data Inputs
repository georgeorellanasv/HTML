<script>
    /* Función para mostrar la sección de países cuando se selecciona "Bank Deposit" en el menú */
    function showSection(sectionId) {
        if (sectionId === 'bank-deposit') {
            document.getElementById('country-section').style.display = 'block';
        }
    }

    /* Función para alternar la visibilidad de la información detallada de cada país */
    function toggleInfo(countryId) {
        var info = document.getElementById(countryId);
        if (info.style.display === "none" || info.style.display === "") {
            info.style.display = "block";
        } else {
            info.style.display = "none";
        }
    }

    /* Función para alternar la visibilidad de cada sub-sección dentro de un país */
    function toggleSubInfo(subInfoId) {
        var subInfo = document.getElementById(subInfoId);
        if (subInfo.style.display === "none" || subInfo.style.display === "") {
            subInfo.style.display = "block";
        } else {
            subInfo.style.display = "none";
        }
    }

    /* Función para filtrar filas dentro de una tabla específica en la sub-sección por título */
    function filterTable(input, tableId) {
        var filter = input.value.toLowerCase();
        var table = document.getElementById(tableId);
        var rows = table.getElementsByTagName("tr");

        for (var i = 0; i < rows.length; i++) {
            var th = rows[i].getElementsByTagName("th")[0]; // Buscar en la primera celda de cada fila
            if (th) {
                var thText = th.innerText.toLowerCase();
                rows[i].style.display = thText.includes(filter) ? "" : "none";
            }
        }
    }
</script>

